<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-12">
      <div class="bg-white rounded p-5 shadow">
        <h1><%= @room.price_per_night %> €</h1>
        <p>Hotel : <%= @room.hotel.name %></p>

          <%= simple_form_for [ @room, @booking ] do |f| %>
              <%= f.input :starts_at, label: "Sélectionnez vos dates:",
                               as: :string,
                               required: false,
                               input_html: { id: "range_start", class: "d-none"} %>
              <%= f.input :ends_at, label: false,
                             as: :string,
                             required: false,
                             input_html: { id: "range_end", class: "d-none" } %>
              <%= f.submit value: "Réserver", class: "btn btn-success"%>
          <% end %>

          <div id="booking-form-div"
            data-bookings="<%= @bookings_dates.to_json %>">
          </div>

          <%#= form.text_field :publish_date, data: { behavior: "flatpickr" } %>

        <%= link_to 'Retour', rooms_path, class: 'btn btn-primary m-1' %>

      </div>
    </div>
  </div>
</div>
